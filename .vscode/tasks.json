{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label":"watch - bundle js",
            "command": "watchify",
            "group": "build",
            "isBackground": true,
            "args": [
                "resources/js/script.js",
                "-o",
                "public/js/bundle.js",
                "--verbose",
            ],
            "options": {
              "cwd": "${workspaceFolder}",
            },
            "problemMatcher": []
        },
        {
            "label":"watch - compile sass",
            "command": "sass",
            "group": "build",
            "isBackground": true,
            "args": [
                "--watch",
                "resources/sass/:public/css",
            ],
            "options": {
              "cwd": "${workspaceFolder}",
            },
            "problemMatcher": []
        }
    ]
}